    <style is:global>
      body::-webkit-scrollbar {
        display: none;
      }
      html::-webkit-scrollbar {
        display: none;
      }
      
      .hero-section {
        background: radial-gradient(circle at center, #1a1a1a 0%, #000 100%);
        padding: 80px 0;
        color: white;
        text-align: center;
        border-bottom: 1px solid #333;
      }

      .promo-badge {
        background: linear-gradient(180deg, #eac071 0.41%, #ffeaa4 39.66%, #e7cd79 75.14%, #dbbf6b 100.41%), #fff;
        color: #0c0b06;
        padding: 12px 30px;
        border-radius: 50px;
        font-weight: 900;
        display: inline-block;
        margin-bottom: 25px;
        font-size: 1.3rem;
        box-shadow: 0 0 25px rgba(234, 192, 113, 0.4);
        animation: pulse 2s infinite;
        text-transform: uppercase;
        border: 2px solid #dbbf6b;
      }

      @keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.05); }
        100% { transform: scale(1); }
      }

      .hero-title {
        font-size: 3.5rem;
        font-weight: 800;
        margin-bottom: 20px;
        text-transform: uppercase;
        background: linear-gradient(to bottom, #fff, #888);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      .register-btn {
        background: linear-gradient(180deg, #eac071 0.41%, #ffeaa4 39.66%, #e7cd79 75.14%, #dbbf6b 100.41%), #fff;
        color: #0c0b06;
        padding: 15px 60px;
        border-radius: 15px;
        border: 3px solid #dbbf6b;
        font-weight: 900;
        font-size: 1.5rem;
        text-decoration: none;
        display: inline-block;
        margin-top: 30px;
        transition: transform 0.2s, box-shadow 0.2s;
        box-shadow: 0 4px 4px 0 rgba(0, 0, 0, 0.25);
        text-transform: uppercase;
      }
      .register-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(234, 192, 113, 0.4);
        color: #0c0b06;
      }
    </style>

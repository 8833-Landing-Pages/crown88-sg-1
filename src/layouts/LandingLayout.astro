</head>
<body>
    <slot />
    
    <script is:inline>
        document.querySelectorAll(".menu-item").forEach(item => {
            item.addEventListener("click", () => {
                document.querySelectorAll(".menu-item").forEach(i => i.classList.remove("active"));
                document.querySelectorAll(".video-box").forEach(v => v.classList.remove("active"));
                item.classList.add("active");
                const videoId = item.getAttribute("data-video");
                if (videoId) {
                    const el = document.getElementById(videoId);
                    if (el) el.classList.add("active");
                }
            });
        });
    </script>
    <script src="assets/dist/bootstrap/js/script.js" is:inline></script>
    <script src="assets/dist/bootstrap/js/jquery.min.js" is:inline></script>
    <script src="assets/dist/bootstrap/js/bootstrap.bundle.min.js" is:inline></script>
    <script src="assets/dist/bootstrap/js/owl.carousel.min.js" is:inline></script>
</body>
</html>
